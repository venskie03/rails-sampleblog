<div class="container bg-[#f5f6fa] w-max mt-5 p-10 m-auto rounded-lg shadow-lg shadow-gray-400">
  <h1 class="text-3xl font-semibold mb-5">EDIT STUDENT DETAILS</h1>

<div class="form-container">
  <form action="<%= student_path(@student) %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <div class="field grid text-center mb-3">
    <label for="student_first_name">First Name</label>
    <input class="text-center rounded-lg font-bold shadow-lg shadow-gray-200 p-1" type="text" id="student_first_name" name="student[first_name]" value="<%= @student.first_name %>">
  </div>
  <div class="field grid text-center mb-3">
    <label for="student_first_name">Last Name</label>
    <input class="text-center rounded-lg font-bold shadow-lg shadow-gray-200 p-1" type="text" id="student_first_name" name="student[last_name]" value="<%= @student.last_name %>">
  </div>
  <div class="field grid text-center mb-3">
    <label for="student_first_name">Contact Number</label>
    <input class="text-center rounded-lg font-bold shadow-lg shadow-gray-200 p-1" type="text" id="student_first_name" name="student[contactno]" value="<%= @student.contactno %>">
  </div>
  <div class="actions border-solid border-2 border-black mt-7 mb-5   rounded-lg p-2 text-center shadow-xl shadow-gray-300 cursor-pointer">
    <input type="submit" value="Update Student">
  </div>
</form>
</div>

<%= link_to 'Back', students_path, class: 'cursor-pointer text-sky-500 ml-36' %>
<div id="flash-messages text-center">
  <% if flash[:notice] %>
    <div class="notice text-center text-green-500"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert text-center text-red-500"><%= flash[:alert] %></div>
  <% end %>
</div>
</div>
